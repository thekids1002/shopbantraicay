<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkCart"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"></CheckBox>

        <ImageView
            android:id="@+id/imgCart"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_launcher_background"></ImageView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTileCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/txtGiaCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="5dp"
                android:text="Ä‘ 23.000"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="17dp"
                android:textStyle="normal">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPlusItem"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="0dp"
                    android:text="+"
                    android:textColor="@color/black">

                </Button>

                <TextView
                    android:id="@+id/txtSlCart"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="99"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="17dp"
                    android:textStyle="normal">

                </TextView>

                <Button
                    android:id="@+id/btnSubItem"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:backgroundTint="@color/white"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:padding="0dp"
                    android:text="-"
                    android:textColor="@color/black">

                </Button>

                <Button

                    android:id="@+id/btnRemoveItemCart"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/delete_cart_icon"
                    android:drawablePadding="4dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"></Button>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>